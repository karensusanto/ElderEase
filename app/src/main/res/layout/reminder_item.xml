<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reminderItemCL"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/reminderItemBtn"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:gravity="start|center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#90CAF9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/reminderItemDelBtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:text="time    text"
        android:textSize="16sp"
        app:cornerRadius="10dp"
        app:icon="@drawable/outline_edit_square_24"
        app:iconGravity="end"
        app:iconSize="30dp"/>

    <ImageButton
        android:id="@+id/reminderItemDelBtn"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/rounded_button_background"
        android:backgroundTint="#E06C73"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_delete_outline_24" />
</androidx.constraintlayout.widget.ConstraintLayout>